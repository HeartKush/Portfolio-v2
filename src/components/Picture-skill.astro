---
import { Image } from "astro:assets";
interface Props {
  src: any;
  alt: string;
  label: string;
}
const { src, alt, label } = Astro.props;
---

<picture
  class="flex flex-col items-center w-24 hover:-translate-y-1 transition-all ease-in-out duration-300"
>
  <Image src={src} alt={alt} class="w-16" />
  <p class="text-slate-200 text-center text-xl pt-2">{label}</p>
</picture>
